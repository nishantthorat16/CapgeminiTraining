<h1>My Library Home</h1>

@if(ViewBag.Books != null)
{
    <table>
        <thead>
            <tr>
                <th></th>
                <th>Book Id</th>
                <th>Title </th>
                <th>Author</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var book in ViewBag.Books)
                {
                    <tr>
                        <td>
                            <img src="@book.BookCover" width="100"/>
                        </td>
                        <td>@book.Id</td>
                        <td>
                            <a href="~/bookdetails/@book.Id">
                                @book.Title
                            </a>
                        </td>
                        <td>@book.Author</td>
                    </tr>
                }
        </tbody>
    </table>
}