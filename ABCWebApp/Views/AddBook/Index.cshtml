@model ABCLibrary.Book
<form action="/addbook" method="post">

    <div>
        <label>Book Tite</label>
        @Html.TextBoxFor(model => model.Title)
        @Html.ValidationMessageFor(model => model.Title, "", new { @style = "color:red" })
    </div>
    <div>
        <label>Book Author</label>
        @Html.TextBoxFor(model => model.Author)
        @Html.ValidationMessageFor(model => model.Author, "", new { @style = "color:red" })
    </div>

     <div>
        <label>Book Cover Page</label>
        @Html.TextBoxFor(model => model.BookCover)
        @Html.ValidationMessageFor(model => model.BookCover, "", new { @style = "color:red" })
    </div>
    <button type="submit">Save Book</button>
</form>